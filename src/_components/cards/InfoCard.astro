---
interface Props {
  heading?: string;
  text?: string;
  skills?: string[];
}

const {
  heading = "My Skills",
  text = "I'm comfortable with a wide range of technologies.",
  skills = ["React", "Node.js", "Tailwind", "Python", "Figma"],
} = Astro.props as Props;
---

<div class="manga-card flex flex-col p-6">
  <h3 class="text-2xl font-bold text-black mb-2">{heading}</h3>
  <p class="text-lg text-gray-700 mb-4">{text}</p>
  <div class="flex flex-wrap gap-2">
    {
      skills.map((s) => (
        <span class="text-base font-bold py-1 px-3 bg-gray-100 border-2 border-gray-300 rounded-md">
          {s}
        </span>
      ))
    }
  </div>
</div>
